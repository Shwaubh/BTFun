<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="second.test.btfun.MainActivity">
    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="DEVICE NAME"
        android:gravity="center"
        android:id="@+id/name"
        android:padding="12dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        />
    <ToggleButton
        android:id="@+id/btn"
        android:layout_toRightOf="@id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="OFF"
        android:textOn="ON"
        android:background="@drawable/togglebutton"
        android:padding="2dp"
        android:fitsSystemWindows="true"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/name"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/list"
        android:dividerHeight="1dp"
        android:divider="@drawable/togglebutton"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list"
        android:text="CHANGE DEVICE NAME"
        android:id="@+id/chngname"
        android:onClick="setChngename"
        />
    <second.test.samlib.SpinningButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chngname"
        android:text="hello"
        app:dir="left"
        />
</RelativeLayout>
